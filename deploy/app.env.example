# Domain configuration
DOMAIN=namesmith.pragnyalabs.com

# Database bootstrap values (used by the postgres container)
POSTGRES_DB=namesmith_db
POSTGRES_USER=namesmith_admin
POSTGRES_PASSWORD=<your-password>

# API configuration
DATABASE_URL=postgresql+asyncpg://namesmith_admin:<your-password>@db:5432/namesmith_db
OPENAI_API_KEY=<your-openai-api-key>
WHOISJSON_API_KEY=<your-whoisjson-api-key>
WHOAPI_API_KEY=<your-whoapi-api-key>

# Background workers
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Used by Frontend - public API base URL (proxied by nginx to backend)
NEXT_PUBLIC_API_URL=https://namesmith.pragnyalabs.com/api
